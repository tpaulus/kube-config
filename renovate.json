{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base",
      "github>tpaulus/renovate-config:auto-merge-gh-actions"
    ],
    "prConcurrentLimit": 0,
    "prHourlyLimit": 0,
    "kubernetes": {
        "fileMatch": ["\\.yaml$"]
    },
    "platformAutomerge": true,
    "automergeType": "branch",
    "ignoreTests": true,
    "packageRules": [
      {
        "matchDatasources": ["docker"],
        "matchPackageNames": ["ghost"],
        "automergeMajor": false,
        "automergeMinor": true,
        "automergePatch": true,
        "stabilityDays": 5
      },
      {
        "matchManagers": ["kubernetes"],
        "automergeMajor": false,
        "automergeMinor": true,
        "automergePatch": true,
        "stabilityDays": 1
      }
    ],
      "hostRules": [
      {
        "hostType": "docker",
        "matchHost": "ghcr.io",
        "username": "tpaulus",
        "encrypted": {
          "password": ""
        }
      }
    ]
  }